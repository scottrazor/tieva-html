{% set defaultOptions = {
    "slidesPerView": 1,
    "spaceBetween": 24,
    "loop": true,
    "pagination": {
        "clickable": true
    }
} %}
{% macro slider(options) %}
    <div
        class="swiper" id="{{ options.id }}">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            {{ caller() }}
        </div>
    </div>
    <div class="swiper-navigation flex justify-end gap-4 mt-10">
        <div class="swiper-button-prev static w-auto h-auto p-4 rounded-full text-base-black dark:text-base-white border
                border-base-black dark:border-base-white aspect-square after:content-none">
            <i class="fa-light fa-arrow-left"></i>
        </div>
        <div class="swiper-button-next static w-auto h-auto p-4 rounded-full text-base-black dark:text-base-white border
                border-base-black dark:border-base-white aspect-square after:content-none">
            <i class="fa-light fa-arrow-right"></i>
        </div>
    </div>
    <script>
        console.log('slider')
        const swiper = new Swiper('# {{ options.id }}', {
            // Optional parameters
            direction: 'horizontal',
            loop: {{ options.loop or defaultOptions.loop }},
            slidesPerView: 1,
            spaceBetween: {{ options.spaceBetween or defaultOptions.spaceBetween }},
            // If we need pagination
            pagination: {
                el: '.swiper-pagination'
            },
            // Navigation arrows
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev'
            },
            // And if we need scrollbar
            scrollbar: {
                el: '.swiper-scrollbar'
            },
            breakpoints: {
                1024: {
                    slidesPerView: {{ options.slidesPerView or defaultOptions.slidesPerView }}
                }
            }
        });
    </script>
{% endmacro %}