{% set defaultOptions = {
    image: '/images/image-cta.jpg',
    title: 'Meet the ever-changing demands of IT and unlock the full potential of your network.',
    button: 'Learn more',
    url: '/',
    content: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos.'
} %}
{% macro image_cta(options) %}
    <div class="container">
        <div class="image-cta grid grid-cols-6 lg:grid-cols-12 grid-rows-1 gap-4">
            <img class="col-span-8 col-start-1 col-end-9 h-full object-cover" src="{{ options.image | default(defaultOptions.image) }}" alt="Image CTA">
                <div class="h-full justify-center py-20 pr-8 flex flex-col gap-4 col-span-7 col-start-6 col-end-13">
                    <div class="relative z-10">
                        <div class="flex flex-col gap-10 items-start">
                            <h3 class="text-3xl md:text-5xl mb-4">{{ options.title | default(defaultOptions.title) }}</h3>
                            <p class="text-xl">{{ options.content | default(defaultOptions.content) }}</p>
                            <a href="{{ options.url | default(defaultOptions.url) }}" class="button button--dark">{{ options.button | default(defaultOptions.button) }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endmacro %}